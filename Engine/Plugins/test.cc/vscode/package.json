{
  "name": "ya-test-runner",
  "displayName": "ya Test Runner",
  "description": "Run ya inline tests directly from VS Code with integration to the test.cc framework",
  "version": "0.1.0",
  "publisher": "ya-engine",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "onLanguage:cpp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ya.runTest",
        "title": "ya: Run Test"
      },
      {
        "command": "ya.runAllTests",
        "title": "ya: Run All Tests"
      },
      {
        "command": "ya.buildTests",
        "title": "ya: Build Tests"
      },
      {
        "command": "ya.debugTest",
        "title": "ya: Debug Test"
      }
    ],
    "configuration": {
      "title": "ya Test",
      "properties": {
        "ya.test.buildSystem": {
          "type": "string",
          "enum": ["auto", "xmake", "cmake"],
          "default": "auto",
          "description": "Build system to use (auto-detect, xmake, or cmake)"
        },
        "ya.test.buildMode": {
          "type": "string",
          "enum": ["debug", "release"],
          "default": "debug",
          "description": "Build mode for test runner (debug or release)"
        },
        "ya.test.buildDir": {
          "type": "string",
          "default": "${workspaceFolder}/build",
          "description": "Directory where built test files are located"
        },
        "ya.test.testRunnerPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to the test runner executable (leave empty for auto-detection)"
        },
        "ya.test.autoBuild": {
          "type": "boolean",
          "default": true,
          "description": "Automatically build tests before running if executable not found"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "eslint": "^7.23.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "glob": "^7.1.6",
    "mocha": "^8.3.2",
    "typescript": "^4.2.3",
    "vscode-test": "^1.5.2"
  },  "dependencies": {
  }
}

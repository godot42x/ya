{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "2.0.0",
    "inputs": [
        {
            "id": "pick-exe",
            "type": "command",
            "command": "extension.commandvariable.file.pickFile", // install this 
            "args": {
                "include": "**/*.{exe}",
            }
        },
        {
            "id": "remember.target",
            "type": "command",
            "command": "extension.commandvariable.remember",
            "args": {
                "key": "target"
            }
        },
        

    ],
    "configurations": [
        {
            "type": "cppvsdbg",
            "request": "attach",
            "name": "Attach EXE",
            "processId": "${command:pickProcess}"
        },
        {
            "type": "cppvsdbg",
            "name": "debug EXE MSVC",
            "request": "launch",
            "program": "${input:pick-exe}",
            "logging": {
                "moduleLoad": true,
                "threadExit": true,
                "processExit": true,
                "programOutput": true,
                "engineLogging": false,
                "exceptions": true
            },
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "visualizerFile": "${workspaceFolder}/all.natvis",
            // "justMyCode": true,
            // "preLaunchTask": "xmake build",
        },
        {
            "type": "cppvsdbg",
            "name": "debug EXE MSVC with build",
            "request": "launch",
            "program": "${workspaceFolder}/build/windows/x64/debug/${input:remember.target}.exe",
            "logging": {
                "moduleLoad": true,
                "threadExit": true,
                "processExit": true,
                "programOutput": true,
                "engineLogging": false,
                "exceptions": true
            },
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "visualizerFile": "${workspaceFolder}/all.natvis",
            // "justMyCode": true,
            "preLaunchTask": "xmake build",
        },
    ]
}
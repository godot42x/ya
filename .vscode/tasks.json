{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "remember.target",
            "type": "command",
            "command": "extension.commandvariable.promptStringRemember",
            "args": {
                "key": "target"
            }
        }
    ],
    "tasks": [
        {
            "label": "xmake build",
            "type": "shell",
            "command": "xmake",
            "args": [
                "b",
                "${input:remember.target}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {}
        }
    ]
}